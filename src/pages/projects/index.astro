---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import ProjectSum from "../../components/ProjectSum.astro";
const posts = await getCollection("projects");

---
<Layout title="PanJohnnyâ€™s projects" description="Place where I showoff my cool projects" metaDesc="Place where I showoff my cool projects">
    <div class="right">
        {
            posts.map((post) => (
                <ProjectSum
                    title={post.data.title}
                    tags={post.data.tags}
                    description={post.data.description}
                    id={post.slug}
                />
            ))
        }

        <a href="https://github.com/PanJohnny?tab=repositories">More on GitHub</a>
    </div>
</Layout>

<style>
    footer {
        display: flex;
        justify-content: space-between;
    }
</style>