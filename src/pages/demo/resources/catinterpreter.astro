        if (!stack.closed) {
            const output = `Program exited with: ${stack.toString()}\nAs string: ${stack.asString()}`;
            console.log(output);
            const out = document.querySelector("#out");
            if (!(out instanceof HTMLTextAreaElement)) return -1;

            out.value = output;
            stack.closed = true;
        }
    }
